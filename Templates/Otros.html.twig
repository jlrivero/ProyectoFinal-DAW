{% extends 'Base.html.twig' %}

{% block titulo %}Otros{% endblock %}

{% block css %}
    <link rel="stylesheet" type="text/css" href="/Css/Cabecera.css">
    <link rel="stylesheet" type="text/css" href="/Css/Principal.css">
    <link rel="stylesheet" type="text/css" href="/Css/jquery-ui_1.11.2.css">
{% endblock %}

{% block javascript %}
    <script type="text/javascript" src="/Javascript/jquery-ui_1.11.2.js"></script>
    <script type="text/javascript" src="/Javascript/busqueda_acontecimiento.js"></script>    
    <script type="text/javascript">
        $(document).ready(function () {
            $("#irArriba").hide();

            $(function () {
                $("#tabs").tabs();
            });

            $('#otros a').addClass("active");

            $("#fAcontec").hide();

            $("#NuevoAcontec").click(function () {
                $("#fAcontec").fadeIn();
            });

            $('#OcultarForm').click(function () {
                $("#fAcontec").fadeOut();
            });

            $(function () {
                $(window).scroll(function () {
                    if ($(this).scrollTop() > 150) {
                        $("#irArriba").fadeIn();
                    }
                    else {
                        $("#irArriba").fadeOut();
                    }
                });
                $("#irArriba").click(function () {
                    $("body,html").animate({
                        scrollTop: 0
                    }, 1000);
                    return false;
                });
            });
        });

    </script>
{% endblock %}

{% block cabecera %}
    {% include 'Cabecera.html.twig' %}
{% endblock %}

