                                {% endif %}

                                {% if acontecimiento.descripcion %}
                                    <p>{{ acontecimiento.descripcion }}</p>
                                {% endif %}

                                <div class="todos_comentarios">
                                    {% set sw = false %}
                                    {% set contador = 0 %}
                                    <form class="col-xs-12" id="fComent" role="form" method="POST" enctype="multipart/form-data">
